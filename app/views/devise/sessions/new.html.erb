

<div class="small-12 columns devise-page-container">

  <div class="small-12 large-6 columns form-container center-block">
    
    <div class="form-title-container">
      <h2 class="text-center">Log In</h2>
    </div>

    <div class="row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "lh-form"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <div class="small-12 columns">
            <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "off" %>
          </div>
        </div>

        <div class="field">
          <div class="small-12 columns">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length || 6} characters minimum)" %>
          </div>
        </div>

        <div class="field small-12 columns">
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div class="small-12 columns actions">
            <%= f.submit "Log In", class: "submit-btn" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>

      <% end %>      
    </div>

  </div> <!-- form-container -->

</div>
