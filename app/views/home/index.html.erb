<div class="small-12 columns home-container">
    <% if current_user %>
      <h1 class="text-center">Welcome to Strange Trails, <%= current_user.first_name %>!</h1>
    <% else %>
      <h1 class="text-center">Welcome to Strange Trails!</h1>
    <% end %>

    <h4 class="text-center">
      <% unless !!current_user %>
        <%= link_to "Click here to sign up", new_user_registration_path, class: "text-center" %>
      <% end %>
    </h4>
</div>
